<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuanzhi.mapper.UserMapper">

	<resultMap type="user" id="baseResultMap">
		<id property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="dept" column="dept"/>
		<result property="account" column="account"/>
		<result property="password" column="password"/>
		<result property="headImg" column="headImg"/>
		<result property="gender" column="gender"/>
		<result property="email" column="email"/>
		<result property="mobile" column="mobile"/>
		<result property="birtday" column="birtday"/>
		<result property="state" column="state"/>
		<result property="memo" column="memo"/>
		
		<collection property="roles" ofType="role">
			<id property="role_id" column="r_role_id"/>
			<result property="name" column="r_name"/>
			<result property="state" column="r_state"/>
		
		<collection property="privileges" ofType="privilege">
			<id property="code" column="code"/>
			<result property="role_id" column="role_id"/>
		</collection>
		
		</collection>
		
		
	
	</resultMap>
	
		
	<select id="findByName" parameterType="java.lang.String"  resultMap="baseResultMap">
		select u.*,r.name r_name, r.state r_state, r.role_id r_role_id,rp.*
		from user u
		join user_role ur 
		on  u.id =ur.user_id 
		join role r
		on ur.role_id = r.role_id
		join role_privilege rp
		on r.role_id=rp.role_id
		where u.name=#{value}
	</select>


</mapper>